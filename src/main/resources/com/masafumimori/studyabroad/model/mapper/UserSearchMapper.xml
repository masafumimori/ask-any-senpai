<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.masafumimori.studyabroad.model.mapper.UserSearchMapper">

	<select id="findByAreaAndNation" resultType="com.masafumimori.studyabroad.model.domain.MstUser">
		SELECT * FROM mst_user
		WHERE areas = #{areas} AND
		<foreach item="nation" collection="nations" open="(" close=")" separator=""  index="index">
			<choose>
				<when test="index == 0">
					(nations LIKE '%${nation}%') 
				</when>
				<otherwise>
					OR (nations LIKE '%${nation}%') 
				</otherwise>
			</choose>
		</foreach>
		ORDER BY updated_at DESC;
	</select>
</mapper>